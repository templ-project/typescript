# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Configuration files (alphabetically sorted)
*.json text eol=lf
*.md text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Shell scripts (LF line endings)
*.sh text eol=lf
.shellcheckrc text eol=lf

# TypeScript/JavaScript source files
*.cjs text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Windows PowerShell scripts (LF for cross-platform consistency)
*.ps1 text eol=lf

# Windows batch scripts (CRLF required)
*.bat text eol=crlf
*.cmd text eol=crlf
